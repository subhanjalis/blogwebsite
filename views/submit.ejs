<%- include('partials/header') %>
<style media="screen">
* { padding:0;margin:0;}

body { position:relative;width:100%;}

.parallax-container {
  position:relative;
  overflow:hidden;
  height: 350px;
}

.parallax {
  position:absolute;
  top:0;
  height:120%;
  width:100%;

  background-image:url(https://i.pinimg.com/originals/de/06/e1/de06e1b1e4a49f033f52d1ae0a2d49ad.png);
  background-color:#8e24aa;
  background-size:cover;
}
input[type="file"] {
    display: none;
}
.custom-file-upload {
  background-color:#8e24aa;
color:white;
    display: inline-block;
    padding: 6px 12px;
    cursor: pointer;
    border-radius:3px;
}

h1,h3,p,h2,blockquote,li { font-family:'Merriweather', sans-serif;font-weight:300;}

.containereu {
  width:80%;

  position:relative;
  top:-250px;

  background-color:#fff;
  margin:0 auto;

  padding:50px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1), 0 16px 48px rgba(0, 0, 0, 0.2);
}

h1 { font-size:50px;margin-bottom:10px;}
h3 { font-size:18px;margin-bottom:20px;}
h2 { font-size:34px;margin-bottom:10px;}
p,blockquote { font-size:19px;}
li { font-size:19px;}

p,ul { margin-bottom:20px;}
blockquote { margin-left:35px;}
a {
  color: black;
}
a:hover {
  text-decoration: none;
  color: #8e24aa;
  font-size:2.5rem;
}

</style>
<div class="parallax-container">
  <div class="parallax" speed="1.5"></div>
</div>

<div class="containereu">
  <div class="container">
<div class="row">  </div>  </div>
    <h1 class="display-3">Daily Blog</h1>
    <hr style="height:3px;border-width:0;color:gray;background-color:#8e24aa">
    <p class="secret-text">Share your thoughts!</p>

    <form action="/submit" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <input type="text" class="form-control text-center" name="stitle" placeholder="Title of your blog">
        <textarea type="text" class="form-control text-center" name="scontent" placeholder="Content" rows="5" cols="30"></textarea>
        <input type="text" class="form-control text-center" name="stags" value="" placeholder="Add tags relating to your blog using space to separate them">
      </div>

      Select images or videos to upload: <br><br>
      <label for="file-upload" class="custom-file-upload"> Choose file

      <input id="file-upload" type="file" name="blogImg"  multiple/></label>
      <label for="file-upload2" class="custom-file-upload">
     +

      <input id="file-upload2" type="file" name="blogImg"  multiple/></label>
      <label for="file-upload3" class="custom-file-upload"> +

      <input id="file-upload3" type="file" name="blogImg"  multiple/></label>
      <!-- <input type="submit" value="Upload Image" accept='image/*'> -->


    <div class="container container-padding50 js-container"></div>


  <hr style="height:3px;border-width:0;color:gray;background-color:#8e24aa">
      <button type="submit" class="btn btn-dark" role="button">Submit a blog</button>


    </form>






</div>



