  html, body, section{
  	height: 100%;
  }
  body{
  	color:#fff;
  	text-align:center;
    background-size: cover;
    background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url(https://images.unsplash.com/photo-1506606401543-2e73709cebb4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);

  }
  .container{
  	display:flex;
  }
  div{
  	display:flex;
  	flex-direction:column;
  	justify-content:center;
  }
  .left{
    font-family: 'Lato', sans-serif;
  	background: linear-gradient(rgba(0,0,0,0.85), rgba(255,255,255,0.10)), url();
  	background-size:cover;
  	background-position:center;
  	flex:1;
  	padding:1rem;
  	transition: all .2s ease-in-out;

  }
  .right{
    font-family: 'Lato', sans-serif;
  	background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url();
  	background-size:cover;
  	background-position:center;
  	flex:1;
  	padding:1rem;
  	transition: all .2s ease-in-out;
  }
  .left:hover, .right:hover{
  	transform: scale(0.95);
  }

  .left h1{
  	/* font-family: 'Kodchasan', sans-serif; */
  	font-size:4em;
  }
  .right h1{
  	/* font-family: 'Kodchasan', sans-serif; */
