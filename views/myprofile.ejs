    <div class="container">
  <div class="row">


      <form  action="/myprofile" method="POST" enctype="multipart/form-data">


        <div class="col-md-12">

            <div class="d-flex flex-column align-items-center text-center p-1 py-4"><h4 style="">Your current profile</h4>
              <img class="rounded-circle mt-5" style="width:160px; height:160px ; padding:5px;border-style: dashed;   border-radius: 50%; object-fit: cover;"  src="upload/<%=usersWithSecrets.profilepic%>"><br><span style="color:#8e24aa" class="font-weight-bold"><h3><b><%=usersWithSecrets.displayname %></b></h3></span><span  class=""><i><%=usersWithSecrets.about %></i></span></div>

        </div><hr style="height:3px;border-width:0;color:gray;background-color:#8e24aa">
        <div class="col-md-12">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                  <div class="col-md-12"><label class="labels">Name</label><input name="displayname" type="text" class="form-control" placeholder="Your display name" value="<%=usersWithSecrets.displayname %>"></div>
              </div>
                <div class="row mt-3">
                  <div class="col-md-12"><label class="labels">About Yourself</label><input name="about" class="form-control" placeholder="Introduce yourself!" rows="4" cols="50" value="<%=usersWithSecrets.about %>"></input></div>
                  <br><br /> <div class="col-md-12"><br><label class="labels">Registered email</label>
                    <% if(usersWithSecrets.username!=undefined){ %>
                      <br><p><%=usersWithSecrets.username %></p></div>
                      <% } else{%>
                      <br><p>You've signed up with google</p></div>
                      <% } %>
                      <div class="">
                        &nbsp;&nbsp;&nbsp;&nbsp;Select an profile image to upload:&nbsp;&nbsp;<br>
                      </div>
                      <label for="pp" class="labelll">&nbsp;&nbsp;+&nbsp;&nbsp;</label>
